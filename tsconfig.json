{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"],
      "@/app/*": ["./src/app/*"],
      "@/components/*": ["src/components/*"]
    },
    "types": ["jest"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "*/src/**/*.ts",
    "*/src/**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "eslintrc.json",
    "src", 
    "src/app/prismicio.ts", 
    "sanity.config.ts",
    ".storybook/*.ts",
  ],
  "exclude": ["node_modules"]
}
